<%- include("../partials/header") %>
<style>
  .menuButton {
    --bs-btn-padding-y: 0.75rem;
    --bs-btn-font-size: 1.25rem;
  }

  .wave {
  position: absolute;
  background: url("/assets/wave.png");
  bottom: 0;
  left: 0;
  background-size: 1000px 100px;
  width: 100%;
  height: 100px;
}

.wave.wave1 {
  animation: animate 30s linear infinite;
  z-index: 1000;
  opacity: 1;
  animation-delay: 0s;
  bottom: 0;
}
.wave.wave2 {
  animation: animate2 15s linear infinite;
  z-index: 999;
  opacity: 0.5;
  animation-delay: -5s;
  bottom: 10px;
}
.wave.wave3 {
  animation: animate 30s linear infinite;
  z-index: 998;
  opacity: 0.2;
  animation-delay: -2s;
  bottom: 15px;
}
.wave.wave4 {
  animation: animate2 5s linear infinite;
  z-index: 997;
  opacity: 0.7;
  animation-delay: -5s;
  bottom: 20px;
}

@keyframes animate {
  0% {
    background-position-x: 0;
  }
  100% {
    background-position: 1000px;
  }
}
@keyframes animate2 {
  0% {
    background-position-x: 0;
  }
  100% {
    background-position: -1000px;
  }
}
</style>

<main class="container w-75 mt-4">
  <div class="card p-5 bg-light">
  <div class="row d-flex justify-content-evenly">
    <a
      class="btn btn-success menuButton col-md-3"
      type="button"
      href="/admin/viewRecords"
      ><strong>View Item<br />Records</strong></a
    >
    <a
      class="btn btn-outline-primary menuButton col-md-3"
      type="button"
      href="/admin/viewItems"
      ><strong>View Item<br />Status &amp; Assignments</strong></a
    >
    <a
      class="btn btn-outline-primary menuButton col-md-3"
      type="button"
      href="/admin/viewUsers"
      ><strong>View User<br />Details</strong></a
    >
  </div>
  <div class="row d-flex justify-content-evenly mt-4">
    <a
      class="btn btn-secondary menuButton col-md-3"
      type="button"
      href="/admin/hoto"
      ><strong>Handover/<br />Takeover</strong></a
    >
    <a
      class="btn btn-info text-light menuButton col-md-3"
      type="button"
      href="/admin/clear"
      ><strong>Clear Devices<br />& Equipment</strong></a
    >
    <a
    class="btn btn-info text-light menuButton col-md-3"
    type="button"
    href="/user/addUser"
    ><strong>Create New<br />User Account</strong></a
  >
  </div>
  <!-- Show count of open entries -->

  <form
    class="row d-flex justify-content-center mt-4"
    action="/user/logout"
    method="POST"
  >
    <button type="submit" class="btn btn-outline-danger btn-lg col-md-6">
      Logout to Main Menu
    </button>
  </form>
</div>

<div class="wave wave1"></div>
<div class="wave wave2"></div>
<div class="wave wave3"></div>
<div class="wave wave4"></div>
</main>